@model Nht_lesson10.Models.Category

@{
    ViewData["Title"] = "Sửa thông tin";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CateId" />
            <div class="form-group">
                <label asp-for="CateName" class="control-label"></label>
                <input asp-for="CateName" class="form-control" />
                <span asp-validation-for="CateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CateStatus" class="control-label"></label>
                <input asp-for="CateStatus" class="form-control" />
                <span asp-validation-for="CateStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <form asp-action="NhtCreate">

            <div class="card">
                <div class="card-header">
                    <h1>@ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="CateName" class="control-label"></label>
                        <input asp-for="CateName" class="form-control" />
                        <span asp-validation-for="CateName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CateStatus" class="control-label"></label>
                        <input asp-for="CateStatus" class="form-control" />
                        <span asp-validation-for="CateStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Ghi Lại" class="btn btn-primary" name="btnNhtCreate" />

                        <a asp-action="NhtIndex">Quay Lại</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
